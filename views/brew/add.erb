<h1>Add a Brew</h1>

<div class="container">
  <form class="form-horizontal" action="/brew/" method="POST">
    <div class="form-group">
      <label for="bean_name" class="control-label col-md-2">Bean Name</label>
      <div class="col-md-10">
        <input type="text" id="bean_name" name="brew[beanName]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label for="bean_source" class="control-label col-md-2">Roastery Name</label>
      <div class="col-md-10">
        <input type="text" id="bean_source" name="brew[beanSource]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label for="bean_weight" class="control-label col-md-2">Bean Weight</label>
      <div class="col-md-10">
        <input type="decimal" id="bean_weight" name="brew[beanweight]" class="form-control" placeholder="in grams">
      </div>
    </div>
    <div class="form-group">
      <label for="brew_method" class="control-label col-md-2">Brew Method</label>
      <div class="col-md-10">
        <select class="form-control" id="brew_method" name="brew[method]">
          <option>Pour-Over</option>
          <option>French Press</option>
          <option>Chemex</option>
          <option>Aeropress</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="bloom_time" class="control-label col-md-2">Bloom Time</label>
      <div class="col-md-10">
        <input type="decimal" id="bloom_time" name="brew[bloomTime]" class="form-control" placeholder="in seconds">
      </div>
    </div>
    <div class="form-group">
      <label for="brew_rating" class="control-label col-md-2">Rating</label>
      <div class="col-md-10">
        <input type="decimal" id="brew_rating" name="brew[rating]" class="form-control" placeholder="From 1 - 5 (Highest)">
      </div>
    </div>
    <div class="form-group">
      <label for="brew_weight" class="control-label col-md-2">Weight</label>
      <div class="col-md-10">
        <input type="decimal" id="brew_weight" name="brew[weight]" class="form-control" placeholder="in grams">
      </div>
    </div>
      <button type="submit" class="btn btn-success form-control">Add</button>
    </div>
  </form>
</div>